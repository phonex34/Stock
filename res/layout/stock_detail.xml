<?xml version="1.0" encoding="utf-8"?>
<ScrollView 	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#ff000000"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
<RelativeLayout
	android:id="@+id/widget46"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
<TableLayout
	android:id="@+id/widget151"
	android:layout_width="140dp"
	android:layout_height="167dp"
	android:orientation="vertical"
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stock_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="AAPl"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" 
            android:gravity="center"/>
      
    </TableRow>

      <TableRow
    
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
            <TextView
            android:id="@+id/stock_Buyprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AAPl"
            android:textSize="25sp"
			android:textStyle="bold" 
			android:gravity="center"
			android:textColor="#F5F5F5"/>
    </TableRow>

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="horizontal"
          android:weightSum="1" >

          <TextView
              android:id="@+id/stock_change"
              android:layout_width="1dp"
              android:layout_height="wrap_content"
              android:textSize="15sp"
              android:layout_weight="1"
              android:text="1" />

          <TextView
              android:id="@+id/stock_Perc_change"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textSize="15sp"
              android:text="TextView" />
      </TableRow>

</TableLayout>

<TableLayout
    android:id="@+id/widget152"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/widget151" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High :"
            android:textColor="@color/second_name" />

        <TextView
            android:id="@+id/stock_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/second_atri" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Low :"
            android:textColor="@color/second_name" />

        <TextView
            android:id="@+id/stock_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/second_atri" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time :"
            android:textColor="@color/second_name" />

        <TextView
            android:id="@+id/stock_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/second_atri" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Volume :"
            android:textColor="@color/second_name" />

        <TextView
            android:id="@+id/stock_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/second_atri" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avg_vol :"
            android:textColor="@color/second_name" />

        <TextView
            android:id="@+id/stock_avgvolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/second_atri" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mak_cap :"
            android:textColor="@color/second_name" />

        <TextView
            android:id="@+id/stock_markcap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/second_atri" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/second_name" />

        <TextView
            android:id="@+id/stock_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/second_atri" />
    </TableRow>
</TableLayout>

<TableLayout

    android:id="@+id/widget153"
    android:layout_alignBottom="@+id/widget152"
    android:layout_alignParentLeft="true"
    android:layout_alignRight="@+id/widget151"
    android:layout_below="@+id/widget151"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2" >


    </TableRow>
</TableLayout>

<TableLayout
    android:id="@+id/widget154"
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/widget153"
   >

    <ImageView
        android:id="@+id/imageChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

</TableLayout>
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/widget154"

   >

   <TableRow
	android:id="@+id/select"
	android:layout_width="fill_parent"
	android:layout_height="73dp"
	android:orientation="horizontal">
<Button
	android:id="@+id/chart1d"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="1 Day" />
<Button
	android:id="@+id/chart1m"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="1 month" />
<Button
	android:id="@+id/chart1y"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="1 year" />
</TableRow>
        

</TableLayout>
</RelativeLayout>
</ScrollView>